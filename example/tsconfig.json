{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "ES2019",
    "jsx": "react",
    "lib": ["dom", "es2015", "esnext"]
  },
  "include": ["./src/**/*"],
  "exclude": [".cache", ".github", "assets", "dist", "node_modules", "public", "cypress"]
}
